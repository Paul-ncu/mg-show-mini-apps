page {
  height: 100vh;
  width: 100vw;
}
scroll-view {
  white-space: nowrap;
  border-bottom: 1px solid rgb(230, 230, 230);
}

.photo_item {
  position: relative;
  display: inline-block;
  width: 60px;
  height: 100px;
  padding: 5px;
}

.photo_item .delete {
  position: absolute;
  top: 0;
  left: 0;
  width: 20px;
  height: 20px;
}

.photo_item image {
  width: 50px;
  height: 90px;
  border-radius: 6px;
  z-index: 999;
}

.text_box {
  width: 100%;
  height: 100px;
  border-bottom: 1px solid rgb(230, 230, 230);
}

.text_box textarea {
  padding: 10px;
  width: 100%;
  height: 100%;
}

.text_box button {
  margin-top: 30px;
  color: rgb(250, 250, 250);
  background-color: var(--themeColor);
}
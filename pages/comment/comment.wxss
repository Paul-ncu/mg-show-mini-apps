
.comment_list {
  width: 100%;
}

.comment_item {
  display: flex;
  height: 100%;
  
}

.comment_item .user {
  flex: 1; 
  padding-left: 20px;
  padding-top: 10px;
}

.user image {
  width: 40px;
  height: 40px;
  border-radius: 50%;
}

.comment_content {
  display: flex;
  flex: 7;
  padding: 10px 0 10px 10px;
  border-bottom: 1px solid rgb(237, 237, 237);
}

.content {
  flex: 5;

}


.user_name_time {
  display: flex;
  align-items: center;
  
}

.user_name {
  height: 100%;
  font-size: 15px;
  font-weight: 550;
}

.time {
  height: 100%;
  padding-left: 20px;
  font-size: 12px;
  color: rgb(100, 100, 100);
}


/* .reply {

} */

.photo {
  flex: 2;
  width: 100%;
  height: 100%;
}

.photo image {
  width: 60px;
  height: 60px;
}

.comment {
  padding: 10rpx 0 ;
  font-size: 14px;
}

.reply_content {
  padding: 5rpx 0;
  font-size: 12px;
  color: rgb(100, 100, 100);
  
}

.reply {
  padding-top: 10rpx;
  color: rgb(61, 140, 245);
}

.mask {
  position: fixed;
  top: 0;
  width: 100vw;
  height: 100vh;
  z-index: 1;
  background-color: rgb(100, 100, 100, .5);
}

.save {
  position: fixed;
  bottom: -150px;
  height: 150px;
  width: 100%;
  border-top-left-radius: 30px;
  border-top-right-radius: 30px;
  background-color: rgb(250, 250, 250);
  z-index: 2;
}


.save view {
  height: 50px;
  width: 100%;
  line-height: 50px;
  font-size: 16px;
  text-align: center;
  border-bottom: 1rpx solid rgb(200, 200, 200);
}

.loading {
  position: absolute;
  display: flex;
  height: 30px;
  width: 100%;
  justify-content: center;
  align-items: center;
}

.loading image {
  height: 20px;
  width: 20px;
  animation: loading 1.2s linear infinite;
}

.loading text {
  color: rgb(100, 100, 100);
}

@keyframes loading {
  0% {
  }
  100% {
    transform: rotate(360deg);
  }
}